<!DOCTYPE html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>All Notes - EverNote</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular.min.js"></script>
    <script src="assets/js/main/app.js"></script>
    <script src="assets/js/main//service/noteService.js"></script>
    <!-- Bootstrap core CSS -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
    />

    <!-- Custom styles for this template -->
    <link href="assets/css/simple-sidebar.css" rel="stylesheet" />
  </head>

  <body ng-controller="EvController">
    <div class="d-flex" id="wrapper">
      <!-- Sidebar -->
      <div class="bg-light border-right" id="sidebar-wrapper">
        <div class="sidebar-heading">Ever Notes</div>
        <div class="list-group list-group-flush">
          <button
            class="btn btn-primary bg-light"
            style="color: black"
            ng-click="addNewNote()"
          >
            Add Note
          </button>
          <a href="#" class="list-group-item list-group-item-action bg-light"
            >Shortcuts</a
          >
          <a href="#" class="list-group-item list-group-item-action bg-light"
            >All Notes</a
          >
          <a href="#" class="list-group-item list-group-item-action bg-light"
            >Notebooks</a
          >
          <a href="#" class="list-group-item list-group-item-action bg-light"
            >Shared with Me</a
          >
          <a href="#" class="list-group-item list-group-item-action bg-light"
            >Tags</a
          >
          <a href="#" class="list-group-item list-group-item-action bg-light"
            >Trash</a
          >
        </div>
      </div>
      <!-- /#sidebar-wrapper -->
      <div id="center-page">
        <ul style="list-style: none" ng-repeat="note in notes">
          <li class="element" ng-click="changeNote(note)">{{ note.name }}</li>
        </ul>
      </div>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <nav
          class="navbar navbar-expand-lg navbar-light bg-light border-bottom"
        >
          <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li class="nav-item active">
                <a class="nav-link" href="#"
                  >Home <span class="sr-only">(current)</span></a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="navbarDropdown"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  Dropdown
                </a>
                <div
                  class="dropdown-menu dropdown-menu-right"
                  aria-labelledby="navbarDropdown"
                >
                  <a class="dropdown-item" href="#">Action</a>
                  <a class="dropdown-item" href="#">Another action</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="#">Something else here</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>

        <div class="container-fluid">
          <div class="top-page-content">
            Last edited on {{ currentNote.lastEdit }}
          </div>
          <div class="form-container">
            <form>
              <div class="input-group mb-3">
                <input
                  type="text"
                  placeholder="Title"
                  style="
                    border: none;
                    font-weight: bold;
                    outline: none;
                    font-size: 30px;
                    width: 100%;
                  "
                  aria-label=""
                  aria-describedby="basic-addon1"
                  name="name"
                  ng-model="currentNote.name"
                />
              </div>

              <div class="input-group mb-3">
                <input
                  type="text"
                  placeholder="Content here"
                  style="border: none; outline: none; width: 100%"
                  aria-label=""
                  aria-describedby="basic-addon1"
                  name="content"
                  ng-model="currentNote.content"
                />
              </div>
            </form>
          </div>
          <div class="btn-group">
            <button class="btn btn-primary" ng-click="saveNote()">Save</button>
            <button
              class="btn btn-primary"
              style="margin-left: 10px"
              ng-click="deleteNote()"
            >
              Delete
            </button>
          </div>
          <div style="margin-top: 20px" class="text-center" ng-show="loadding">
            <span class="fa fa-spinner fa-spin fa-3x"></span>
          </div>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="assets/js/jquery-3.3.1.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
      $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
      });
    </script>
  </body>
</html>
